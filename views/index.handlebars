<!-- search bar -->


<div class="container search-bar">
  {{!-- <div class="create">
    <a href="/restaurants/new"><i class="fas fa-plus-square fa-lg">新增餐廳</i></a>
  </div> --}}
  
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
  
  <form action="/sort" method="GET">
  <div class="sorting">
    <select class="form-select btn-success" onchange="this.form.submit()" name="sort" id="sort">
      <option value="" selected>Sort</option>
      <option value="name" {{#is sort 'name'}}selected {{/is}}>A -> Z</option>
      <option value="-name" {{#is sort '-name'}}selected {{/is}}>Z -> A</option>
      <option value="category" {{#is sort 'category'}}selected {{/is}}>Category</option>
      <option value="region" {{#is sort 'region'}}selected {{/is}}>Region</option>
    </select>
  </div>
  </form>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="createBtn pb-2">
    <a href="/restaurants/new"><i class="fas fa-plus-square fa-lg" id="createBtn">新增餐廳</i></a>
  </div>
  
  <div class="row">
    {{#each restaurant}}
    <div class="col-sm-4">
      <div class="card-columns">

        <a href="/restaurants/{{ this._id }}" class="text-secondary" style="text-decoration:none;">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <a href="/restaurants/{{ this._id }}" style="text-decoration:none;">
                <button type="button" class="btn btn-warning">
                  <i class="fas fa-info-circle"></i>
                </button>
              </a>
              <a href="/restaurants/{{ this._id }}/edit" style="text-decoration:none;">
                <button type="button" class="btn btn-info"><i class="fas fa-edit"></i></button>
              </a>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="button submit" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>

              </form>
            </div>
          </div>
        </a>

      </div>
    </div>

    {{/each}}
  </div>
</div>